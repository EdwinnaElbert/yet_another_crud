<table>
  <tr>
    <th>id</th>
    <th>email</th>
    <th>nickname</th>
    <th>admin</th>
    <th>Q comments</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.email %></td>
    <td><%= user.nickname || 'anonymous' %></td>
    <td><%= user.admin %></td>
    <td><%= Comment.where(author_id: user.id).count %></td>
  </tr>
  <% end %>
</table>
