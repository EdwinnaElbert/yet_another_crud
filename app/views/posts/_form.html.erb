<% if @post.errors.any? %>
  <ul>
    <%= @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.order(:category_name), :id, :category_name %>
  </div>
  <div>
    <%= f.label :sub_category %>
    <%= f.collection_select :sub_category_id, SubCategory.order(:sub_category_name), :id, :sub_category_name %>
  </div>
  <div>
    <%= f.label :main_picture %>
    <%= f.file_field :main_picture %>
  </div>
  <div>
    <%= f.cktext_area :body, rows: 10 %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
  <% if params[:new] %>
    <%= render 'categories/form' %>
    <%= render 'sub_categories/form' %>
  <% end %>
