<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= simple_format @post.body %>
</p>

<p>
  <strong>Category: <%= Category.find(@post.category_id).category_name %></strong>
</p>

<div>
  <%= image_tag @post.main_picture_url if @post.main_picture.file.present? %>
</div>

<p>
  <strong>created_at: <%= @post.created_at %></strong>
</p>

<p>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<%= render 'comments/form' %>
<%= render @post.comments %>
